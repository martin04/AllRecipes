<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    style="@style/fab_layout_match_width_match_height_style"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/shopping_cart_layout"
    android:background="?android:windowBackground">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/shopping_cart_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/list_padding_top_bottom"
        android:paddingBottom="@dimen/list_padding_top_bottom" />

    <com.software.shell.fab.ActionButton
        android:id="@+id/fab"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        style="@style/fab_action_button_style"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginBottom="@dimen/fab_margin"
        fab:type="DEFAULT"
        fab:button_color="@color/fab_material_red_500"
        fab:button_colorPressed="@color/fab_material_red_900"
        fab:image="@drawable/fab_plus_icon"
        fab:image_size="24dp"
        fab:shadow_color="@color/shadow_color"
        fab:shadow_radius="@dimen/fab_shadow_radius"
        fab:shadow_xOffset="@dimen/fab_shadow_x_offset"
        fab:shadow_yOffset="@dimen/fab_shadow_y_offset"
        fab:stroke_color="@color/fab_material_blue_grey_500"
        fab:stroke_width="@dimen/fab_stroke_width" />

</RelativeLayout>
